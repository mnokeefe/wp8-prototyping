{% block content %} 
<div class="ui-panorama-item-active">
  <div class="page-header">
    <h1>{{ model.name }}</h1>
  </div>
  <ul>
    {% for item in model.tracks %}
    <li class="tracks__track">
      <a href="/player">
        <h3>{{ item.title }}</h3>
        <p>{{ item.artist }}</p>
      </a>
      <span class="tracks__played-time">{{ item.played }}</span>
      <a href="" class="borrow-button"><i class="fa fa-lemon-o"></i></a>
    </li>
    {% endfor %}
  </ul>
  <!-- TODO: Selected song, add to playlist/share -->
</div>
{% include "app-bar" %}
{% endblock %}
